<div class="jumbotron">
  <h2 class="text-center">Contact us</h2>
  {{#if isSuccess}}
  <div class="alert alert-success">{{successMessage}}</div>
  {{else}}
<form>
  <div class="form-group">
    <label for="exampleFormControlInput1">Email address</label>
    {{input type="email" value=email class="form-control" id="exampleFormControlInput1" 
    placeholder="name@example.com"}}
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Message</label>
    {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)"
     value=message id="exampleFormControlTextarea1" rows="7"}}
  </div>
  <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'sendMessage'}}>Send Message</button>
</form>
{{/if}}
</div>